<?xml version="1.0" encoding="UTF-8"?>
<!-- configuration file for LogBack (slf4J implementation)
See here for more details: http://gordondickens.com/wordpress/2013/03/27/sawing-through-the-java-loggers/ -->
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <appender name="authentication_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/aegaeon-authentication.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="ca.n4dev.aegaeon.api.logging.AuthenticationLogger" level="info">
        <appender-ref ref="authentication_appender" />
    </logger>
    
    <appender name="authorization_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/aegaeon-authorization.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="ca.n4dev.aegaeon.api.logging.AuthorizationLogger" level="info">
        <appender-ref ref="authorization_appender" />
    </logger>
    
    <appender name="tokengranting_appender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/aegaeon-tokengranting.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="ca.n4dev.aegaeon.api.logging.TokenGrantingLogger" level="info">
        <appender-ref ref="tokengranting_appender" />
    </logger>
    
    
    <!-- thymeleaf -->
    <logger name="org.thymeleaf" level="error"/>
    
    <!-- Spring logger -->
    <logger name="org.springframework" level="info" />
    <logger name="org.springframework.jdbc" level="info" />
    <logger name="org.springframework.scheduling" level="info" />
    
    <!-- Hibernate logger -->
    <logger name="org.hibernate" level="info" />

    <logger name="org.apache.commons" level="info" />
    <logger name="org.apache.coyote" level="info" />
    <logger name="org.apache.catalina" level="info" />
    <logger name="sun.net.www" level="info" />
    <logger name="org.apache" level="info" />
    <logger name="org.quartz" level="info" />
         
    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
